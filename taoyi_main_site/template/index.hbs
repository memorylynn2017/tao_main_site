<div class="banner-con clearfix">
    <ul class="menu pull-left">
        {{#each nav}}
        <li class="menu-li">
            <div class="pro-type-block">
                {{#each this.Parent}}
                <div class="pro-type-parent">
                    <a href="{{this.url}}">{{this.name}}</a>
                </div>
                <div class="pro-type-child">
                    {{#each this.childtype}}
                    <a href="{{this.url}}">{{this.name}}</a>
                    {{/each}}
                </div>
                {{/each}}
            </div>
            <div class="menu-con">
                <div class="pro-left pull-left">
                    {{#each this.Child}}
                    <div class="pro-type-block">
                        <div class="pro-type-parent">
                            <a href="{{this.url}}">{{this.name}}</a>
                        </div>
                        <div class="pro-type-child">
                            {{#each this.childtype}}
                            <a href="{{this.url}}">{{this.name}}</a>
                            {{/each}}
                        </div>
                    </div>
                    {{/each}}
                </div>
                <div class="pro-right pull-left">
                    <div class="pro-type-block">
                        <div class="pro-type-parent">推荐商家</div>
                        <div class="pro-type-child">
                            {{#each this.Recommend}}
                            <span>
                                <a href="{{this.url}}">{{this.name}}</a>
                            </span>
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </li>
        {{/each}}
    </ul>
</div>



